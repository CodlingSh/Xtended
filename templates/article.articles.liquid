<a href="{{ article.metafields.custom.instagram_url }}"><img src="{{ article.image | image_url }}" width=200 id="featured_header_img"></a>

<div id="article_container">
    <article>
        <h2 class="futura article_header">ARTICLES</h2>
        <h3 class="futura article_title">{{ article.title }}</h3>
        <div id="article_info">
            <p>{{ article.author }}</p>
            <p>{{ article.published_at | date: '%B %d, %Y' }}</p>
        </div>
        <p>{{ article.content }}</p>
    </article>
</div>