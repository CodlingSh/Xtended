/*
    CSS Stylesheet for XTENDED
    Author: Sheldon Codling
    Website: www.sheldonc.ca
    Description: This stylesheet contains the custom styles for the Xtended shopify theme.
    Date: March 18th
*/

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; 
}

/* Variables and custom font */
:root {
    /* Colors */
    --black: #121212;
    --dark_gray: #373939;
    --light_gray: #858585;
    --green: #00FF00;
    /* Positioning */
    --contentMargin: 1rem;
    --maxSize: 87.5rem;
}

@font-face {
    font-family: "Futura";
    src: url("{{ 'Futura_Extra_Black_font.ttf' | asset_url }}") format('truetype');
}

.futura {
    font-family: "Futura", sans-serif;
}

/* Visibility controls for mobile viewports */
.mobile {
    display: inline;
}

.desktop {
    display: hidden;
}

/* main elements */
body {
    background-color: var(--dark_gray);
    color: #fcfcfc;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    font-family: 'Times New Roman', Times, serif;
    font-size: 16px;
}

main {
    width: 100%;
    max-width: var(--maxSize);
    margin: 0 auto;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: unset;
}

a {
    text-decoration: none;
    cursor: pointer;
}

#content_container {
    margin: var(--contentMargin);
}

input[type="text"], input[type="email"], textarea {
    display: block;
    border: 2px solid var(--green);
    font-family: 'Times New Roman', Times, serif;
    font-size: 1rem;
    background-color: transparent;
    color: #ffffff;
    width: 100%;
    margin-left: auto; margin-right: auto; margin-bottom: 0.75rem;
    padding-left: 0.5rem;
}
input[type="text"], input[type="email"] {
    height: 2.5rem;
}
textarea {
    padding-top: 0.5rem;
}

input[type="submit"] {
    background-color: var(--green);
    border: none;
    border-radius: 5px;
    height: 2rem; width: 6rem;
    font-family:'Times New Roman', Times, serif;
    font-size: 1.25rem;
}

.icons {
    display: flex;
    justify-content: space-between;
    height: 2.75rem; width: 10rem;
    margin-left: auto; margin-right: auto;
    margin-bottom: 1rem;
}
.icons svg {
    height: 100%;
}

/* Header */
header {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--black);
    height: 4rem;
    /* height: 10vh; */
    /* height: 4rem; */
}
header #burger {
    position: absolute;
    left: 0;
    height: 100%;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    cursor: pointer;
    top: 0;
}
header #burger div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:space-between;
    height: 1.25rem;
}
header #burger div span {
    display: block;
    width: 2rem;
    height: 0.18rem;
    background-color: var(--green);
    border-radius: 99px;
}
header a {
    height: 40%;
    display: flex;
    align-items: center;
}
header #logo {
    width: auto;
    height: 100%;
}

/* Mobile Nav */
#mobile_nav {
    position: fixed;
    display: flex;
    flex-direction: column;
    padding-top: 3rem; 
    top: 0;
    width: 100%;
    height: 100lvh;
    background-color: var(--black);
    z-index: 99;
    text-align: center;
    transform: translateX(-100vw);
    transition: transform 400ms ease-in-out;
}
#mobile_nav a {
    font-family: "Futura";
    font-size: 1.25rem;
    color: var(--green);
    text-decoration: none;
    padding: 0.75rem 0;
}
#mobile_nav input {
    border: 2px solid var(--green);
    padding-left: 3rem;
    border-radius: 99px;
    font-family: "Futura";
    font-size: 1.5rem;
    background-image: url("{{ 'search.svg' | asset_url }}");
    background-color: transparent;
    background-repeat: no-repeat;
    background-size: 1.25rem;
    background-position: center left 1rem;
    color: var(--gray);
    height: 2.5rem;
    width: 80%;
    margin-left: auto; margin-right: auto;
}
#mobile_nav #close_btn {
    position: absolute;
    top: 0; right: 0;
    color: var(--green);
    width: 3rem; height: 3rem;
    padding: 0.9rem;
    cursor: pointer;
}
#mobile_nav #search {
    margin-bottom: 0.25rem;
}
#email_list_form_nav {
    position: absolute;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
}
#email_list_form_nav form > * {
    margin-bottom: 0.25rem;
}
#email_list_form_nav input {
    border-radius: 0.5rem;
    background-image: none;
    background-color: white;
    padding-left: 0;
    margin-bottom: 0.5rem;
    text-align: center;
    border: none;
    color: black;
}
#email_list_form_nav input[type="submit"] {
    background-color: var(--green);
}
.menu_visible {
    transform: translateX(0vw) !important;
}

#desktop_nav {
    background-color: #4d4d4d;
    width: 100%;
}
#desktop_nav #link_container {
    display: flex;
    align-items: center;
    height: 5rem; width: 100%; max-width: var(--maxSize);
    margin: 0 auto;
}
#desktop_nav #link_container #left {
    display: flex;
    justify-content: space-between;
    width: 50%;
}
#desktop_nav #link_container a {
    color: var(--green);
    font-size: 1.5rem;
    font-family: "Futura";
}

/* Footer */
footer {
    display: flex;
    font-family: "Futura";
    flex-direction: column;
    align-items: center;
    background-color: var(--black);
    padding-top: 2rem; padding-left: 1rem; padding-right: 1rem;
    text-align: center;
    margin-top: auto;
}
footer > *:not(:last-child) {
    margin-bottom: 1rem;
}
footer a {
    height: 1.5rem;
}
footer a img {
    height: 100%;
    width: auto;
}
footer p {
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
}
#email_list_form {
    display: flex;
}
#email_list_form input[type="email"] {
    height: 2rem;
    font-family: "Futura";
    border: none;
    border-radius: 7px;
    text-align: center;
    color: var(--dark_gray);
    background-color: white;
    padding-left: 0;
    margin-right: 0.5rem;
}
#email_list_form input[type="submit"] {
    background-color: var(--green);
    border: none;
    border-radius: 5px;
    height: 2rem; width: 4rem;
    font-family: "Futura";
}

/* Styles for the index page */
#carousel {
    border: 0.25rem solid var(--light_gray);
    /* height: calc((100vw - var(--contentMargin) * 2) * 1.25); */
    aspect-ratio: 0.77 / 1;
    margin-bottom: 1rem;
    overflow: hidden;
}
#slider {
    display: flex;
    width: 600%;
    height: 100%;
    transition: transform 750ms ease-in-out;
}
.carousel_item {
    width: calc(100% / 12);
    height: 100%;
    flex-basis: 100%;
}
.carousel_item .carousel_item_image {
    height: 70%; width: 100%;
    background-position: center;
    background-size: cover;
}
.carousel_item .carousel_item_description {
    height: 30%;
    background-color: var(--black);
}
.carousel_item .carousel_item_description .excerpt {
    display: flex;
    /* box-orient: vertical */
    line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

#mobile_nav_buttons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1rem
}
#mobile_nav_buttons a {
    font-family: "Futura";
    background-color: var(--black);
    padding: 1rem;
    color: white;
    text-decoration: none;
    text-align: center;
}

/* Articles and Interviews group page */
#blog_title {
    font-family: "Futura";
    text-align: center;
    margin: 1rem;
}

.article_container {
    display: block;
    position: relative;
    border: 0.25rem solid var(--light_gray);
    width: 90%;
    height: calc(90vw * 0.85);
    margin: 1.5rem auto;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
}
.article_info {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 1rem 0;
    background-color: rgba(0,0,0,0.85);
    text-align: center;
    color: white;
    text-decoration: white;
}

/* Individual articles */
#featured_header_img {
    display: block;
    position: relative;
    top: 0.75rem;
    width: 90%;
    margin: 0 auto;
}

#article_container {
    background-color: #000000;
    width: 100%;
}
article {
    width: 90%;
    margin: 0 auto;
    padding: 1rem 0;
    line-height: 1.5;
}
article p img {
    width: 100%;
    margin: 1rem 0; 
}
article .article_header {
    color: var(--green);
    text-align: center;
    font-size: 0.9rem;
}
article .article_title {
    font-size: 1.5rem;
    text-align: center;
}
article #article_info {
    display: flex;
    justify-content: center;
    grid-gap: 2rem;
    border: 0.125rem solid var(--green);
    border-left: 0; border-right: 0;
    color: var(--green);
    font-size: 1rem;
    padding: 0.75rem 0;
    margin: 1rem 0;
}

/* Pages */
.page_heading {
    text-align: center;
    border-bottom: 0.125rem solid var(--green);
    margin-bottom: 3rem;
}
.page_heading > * {
    margin-bottom: 0.5rem;
}
.page_heading h1 {
    color: var(--green);
    font-size: 0.9rem;
}
#contact_message {
    padding: 1rem;
    border-bottom: 0.125rem solid var(--green);
    margin-bottom: 2rem;
}
#contact_message p {
    max-width: 21rem;
    margin: 0 auto;
    color: var(--green);
}


@media screen and (min-width: 360px) {
    :root {
        --contentMargin: 1.25rem;
    }
    
    header a {
        height: 50%;
    }

    #carousel {
        margin-bottom: 1.5rem;
    }

    #mobile_nav_buttons {
        font-size: 1.125rem;
    }
    #mobile_nav a {
        font-size: 1.5rem;
        padding: 1rem;
    }
}



/* Desktop viewport */
@media screen and (min-width: 1024px) {
    .desktop {
        display: inline;
    }

    .mobile {
        display: none;
    }

    header {
        height: 16rem;
    }
    header a {
        height: 60%;
    }

    main {
        margin-top: 3rem; margin-bottom: 3rem;
        padding: 0 1rem;
    }

    #content_container {
        width: 66%;
        margin: 0;
    }

    #carousel {
        aspect-ratio: 1.26 / 1;
    }
}