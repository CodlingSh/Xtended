* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; 
}

/* Variables and custom font */
:root {
    /* Colors */
    --black: #121212;
    --dark_gray: #373939;
    --light_gray: #858585;
    --green: #00FF00;
}

@font-face {
    font-family: "Futura";
    src: url("{{ 'Futura_Extra_Black_font.ttf' | asset_url }}") format('truetype');
}

.futura {
    font-family: "Futura", sans-serif;
}

/* Visibility controls for mobile viewports */
.mobile {
    display: inline;
}

.desktop {
    display: hidden;
}

/* main elements */
body {
    background-color: var(--dark_gray);
    color: #fcfcfc;
}



input[type="text"], input[type="email"], textarea {
    display: block;
    border: 2px solid var(--green);
    font-family: 'Times New Roman', Times, serif;
    font-size: 1rem;
    background-color: transparent;
    color: #ffffff;
    width: 100%;
    margin-left: auto; margin-right: auto; margin-bottom: 0.75rem;
    padding-left: 0.5rem;
}
input[type="text"], input[type="email"] {
    height: 2.5rem;
}
textarea {
    padding-top: 0.5rem;
}

/* Header */
header {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--black);
    height: 4rem;
    /* height: 10vh; */
    /* height: 4rem; */
}
header #burger {
    position: absolute;
    left: 0;
    height: 100%;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    cursor: pointer;
    /* z-index: 99; */
}
header #burger div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:space-between;
    height: 1.25rem;
}
header #burger div span {
    display: block;
    width: 2rem;
    height: 0.18rem;
    background-color: var(--green);
    border-radius: 99px;
}
header a {
    height: 40%;
    display: flex;
    align-items: center;
}
header #logo {
    width: auto;
    height: 100%;
}

/* Mobile Nav */
#mobile_nav {
    position: fixed;
    display: flex;
    flex-direction: column;
    padding-top: 3rem; 
    top: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--black);
    z-index: 99;
    text-align: center;
    transform: translateX(-100vw);
    transition: transform 400ms ease-in-out;
}
#mobile_nav a {
    font-family: "Futura";
    font-size: 1.25rem;
    color: var(--green);
    text-decoration: none;
    padding: 1rem 0;
}
#mobile_nav input {
    border: 2px solid var(--green);
    padding-left: 3rem;
    border-radius: 99px;
    font-family: "Futura";
    font-size: 1rem;
    background-image: url("{{ 'search.svg' | asset_url }}");
    background-color: transparent;
    background-repeat: no-repeat;
    background-size: 1.25rem;
    background-position: center left 1rem;
    color: var(--gray);
    height: 2.5rem;
    width: 80%;
    margin-left: auto; margin-right: auto;
    margin-bottom: 1rem;
}
#mobile_nav #close_btn {
    position: absolute;
    top: 0; right: 0;
    color: var(--green);
    width: 3rem; height: 3rem;
    padding: 0.9rem;
    cursor: pointer;
}
.menu_visible {
    transform: translateX(0vw) !important;
}

/* Footer */
footer {
    display: flex;
    font-family: "Futura";
    flex-direction: column;
    align-items: center;
    background-color: var(--black);
    padding-top: 2rem;
    text-align: center;
}
footer > *:not(:last-child) {
    margin-bottom: 1rem;
}
footer a {
    height: 1.5rem;
}
footer a img {
    height: 100%;
    width: auto;
}
footer p {
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
}
footer input[type="text"] {
    height: 2rem;
    font-family: "Futura";
    border: none;
    border-radius: 7px;
    text-align: center;
}
footer input[type="submit"] {
    background-color: var(--green);
    border: none;
    border-radius: 5px;
    height: 2rem; width: 3rem;
    font-family: "Futura";
}
footer .icons {
    display: flex;
    justify-content: space-between;
    height: 2.75rem; width: 10rem;
    margin-bottom: 1rem;
}
footer .icons svg {
    height: 100%;
}

/* Styles for the index page */
#carousel {
    border: 0.25rem solid var(--light_gray);
    margin: 1rem;
    height: 23rem;
}

#mobile_nav_buttons {
    margin: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1rem
}
#mobile_nav_buttons a {
    font-family: "Futura";
    background-color: var(--black);
    padding: 1rem;
    color: white;
    text-decoration: none;
    text-align: center;
}

/* Articles and Interviews group page */
#blog_title {
    font-family: "Futura";
    text-align: center;
    margin: 1rem;
}

.blog_container {
    border: 0.25rem solid var(--light_gray);
    margin: 1rem;
}

/* Individual articles */
#featured_header_img {
    display: block;
    position: relative;
    top: 0.75rem;
    width: 90%;
    margin: 0 auto;
}

#article_container {
    background-color: #000000;
    width: 100%;
}
article {
    width: 90%;
    margin: 0 auto;
    padding: 1rem 0;
    line-height: 1.5;
}
article p img {
    width: 100%;
    margin: 1rem 0; 
}

/* Pages */
.page_heading {
    text-align: center;
    border-bottom: 0.125rem solid var(--green);
    margin-bottom: 3rem;
}
.page_heading > * {
    margin-bottom: 0.5rem;
}
.page_heading h1 {
    color: var(--green);
    font-size: 0.9rem;
}


@media screen and (min-width: 360px) {
    header a {
        height: 50%;
    }
}