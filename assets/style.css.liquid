/*
    CSS Stylesheet for XTENDED
    Author: Sheldon Codling
    Description: This stylesheet contains the custom styles for the Xtended shopify theme.
    Date: March 18th
*/

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; 
}

/* Variables and custom font */
:root {
    /* Colors */
    --black: #121212;
    --dark_gray: #373939;
    --light_gray: #858585;
    --green: #00FF00;
}

@font-face {
    font-family: "Futura";
    src: url("{{ 'Futura_Extra_Black_font.ttf' | asset_url }}") format('truetype');
}

/* Visibility controls for mobile viewports */
.mobile {
    display: inline;
}

.desktop {
    display: hidden;
}

/* main elements */
body {
    background-color: var(--dark_gray);
    color: #fcfcfc;
}

/* Header */
header {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--black);
    height: 4rem;
    /* height: 10vh; */
    /* height: 4rem; */
}
header #burger {
    position: absolute;
    left: 0;
    height: 100%;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    /* z-index: 99; */
}
header #burger div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:space-between;
    height: 1.25rem;
}
header #burger div span {
    display: block;
    width: 2rem;
    height: 0.18rem;
    background-color: var(--green);
    border-radius: 99px;
}
header a {
    height: 40%;
    display: flex;
    align-items: center;
}
header #logo {
    width: auto;
    height: 100%;
}

/* Footer */
footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--black);
    padding: 2rem;
}
footer a {
    height: 1.5rem;
}
footer a img {
    height: 100%;
    width: auto;
}
/* Styles for the index page */
#carousel {
    border: 0.25rem solid var(--light_gray);
    margin: 1rem;
    height: 23rem;
}

#mobile_nav_buttons {
    margin: 1rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 1rem
}
#mobile_nav_buttons a {
    font-family: "Futura";
    background-color: var(--black);
    padding: 1rem;
    color: white;
    text-decoration: none;
    text-align: center;
}


@media screen and (min-width: 360px) {
    header a {
        height: 50%;
    }
}